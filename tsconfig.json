  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": ["dom", "es2018"],
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}